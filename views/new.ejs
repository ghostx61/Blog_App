<% include partials/header %>
    
    <div class="ui main text container segment">
        <div class="ui header">New Blog</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Name">
            </div>
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="blog[image]" placeholder="Image URL">
            </div>
            <div class="field">
                <label>Blog Description</label>
                <textarea class="field" placeholder="Description" name="blog[body]" required></textarea>
            </div>
            <button class="ui purple basic button">Submit</button>
        </form>
    </div>
<% include partials/footer %>
