<% include partials/header %>
    
    <div class="ui main text container segment">
        <div class="ui header">Edit Blog</div>
        <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title%>">
            </div>
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="blog[image]" value="<%= blog.image%>">
            </div>
            <div class="field">
                <label>Blog Description</label>
                <textarea class="field" name="blog[body]" required><%= blog.body%></textarea>
            </div>
             <input type="submit" value="Edit" class="ui purple basic button">
        </form>
    </div>
<% include partials/footer %>
